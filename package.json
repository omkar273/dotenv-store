{
  "name": "dotenv-store",
  "version": "1.0.1",
  "description": "A simple package to encrypt and store environment variables in a file",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "dotenv-store": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "test": "./scripts/test-cli.sh",
    "prepublishOnly": "npm run build",
    "example": "ts-node examples/basic-usage.ts",
    "example:config": "ts-node examples/config-usage.ts",
    "example:algorithm": "ts-node examples/algorithm-usage.ts",
    "example:tracking": "ts-node examples/algorithm-tracking.ts",
    "test-cli": "./scripts/test-cli.sh"
  },
  "keywords": [
    "env",
    "environment",
    "variables",
    "encrypt",
    "secure",
    "storage"
  ],
  "homepage": "https://github.com/omkar273/dotenv-store",
  "author": "Omkar Sonawane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omkar273/dotenv-store.git"
  },
  "bugs": {
    "url": "https://github.com/omkar273/dotenv-store/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.8.10",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  }
}
